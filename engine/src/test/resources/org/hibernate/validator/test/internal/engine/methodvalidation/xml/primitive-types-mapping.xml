<constraint-mappings
        xmlns="http://jboss.org/xml/ns/javax/validation/mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation=
                "http://jboss.org/xml/ns/javax/validation/mapping validation-mapping-1.1.xsd" version="1.1">

    <bean class="org.hibernate.validator.test.internal.engine.methodvalidation.xml.PrimitiveTypesConfiguredInXmlTest$PrimitiveWrapper"
          ignore-annotations="true">
        <method name="setBoolean">
            <parameter type="boolean">
                <constraint annotation="javax.validation.constraints.NotNull"/>
            </parameter>
        </method>

        <method name="setChar">
            <parameter type="char">
                <constraint annotation="javax.validation.constraints.NotNull"/>
            </parameter>
        </method>

        <method name="setDouble">
            <parameter type="double">
                <constraint annotation="javax.validation.constraints.NotNull"/>
            </parameter>
        </method>

        <method name="setFloat">
            <parameter type="float">
                <constraint annotation="javax.validation.constraints.NotNull"/>
            </parameter>
        </method>

        <method name="setLong">
            <parameter type="long">
                <constraint annotation="javax.validation.constraints.NotNull"/>
            </parameter>
        </method>

        <method name="setInt">
            <parameter type="int">
                <constraint annotation="javax.validation.constraints.NotNull"/>
            </parameter>
        </method>

        <method name="setShort">
            <parameter type="short">
                <constraint annotation="javax.validation.constraints.NotNull"/>
            </parameter>
        </method>

        <method name="setByte">
            <parameter type="byte">
                <constraint annotation="javax.validation.constraints.NotNull"/>
            </parameter>
        </method>

    </bean>
</constraint-mappings>