msgstr ""

#. Tag: programlisting
#: integration.xml:250
#, no-c-format
msgid "javax.faces.validator.BeanValidator.MESSAGE={1}: {0}"
msgstr ""

#. Tag: para
#: integration.xml:252
#, no-c-format
msgid "The default is:"
msgstr ""

#. Tag: programlisting
#: integration.xml:254
#, no-c-format
msgid "javax.faces.validator.BeanValidator.MESSAGE={0}"
msgstr ""

